<!DOCTYPE html>
<html lang="pt">

<head>
    <%- include('../partials/head'); %>
</head>

<body>
<div id="colorlib-page">
    <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
    <%- include('../partials/sidebar',{ title:title }); %>
    <div id="colorlib-main">
        <section class="ftco-section contact-section">
            <div class="container">
                <div class="row d-flex mb-5 contact-info">
                    <div class="col-md-12 mb-4">
                        <h2 class="h4 font-weight-bold">Informações de Contato</h2>
                    </div>
                    <div class="w-100"></div>
                    <div class="col-md-3">
                        <p><span>Endereço:</span> 203 Fake St.Mountain View, San Francisco, California, USA</p>
                    </div>
                    <div class="col-md-3">
                        <p><span>Telefone:</span> <a href="tel:+556199999999">+55 61 9999 9999</a></p>
                    </div>
                    <div class="col-md-3">
                        <p><span>Email:</span> <a href="mailto:info@localhost.com">info@localhost.com</a></p>
                    </div>
                    <div class="col-md-3">
                        <p><span>Website</span> <a href="#">yoursite.com</a></p>
                    </div>
                </div>
                <div class="row block-9">
                    <div class="col-md-6 order-md-last pr-md-5">
                        <form action="#">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Seu Nome">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Seu Email">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Assunto">
                            </div>
                            <div class="form-group">
                                <textarea name="" id="" cols="30" rows="7" class="form-control"
                                          placeholder="Mensagem"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Enviar Mensagem" class="btn btn-primary py-3 px-5">
                            </div>
                        </form>

                    </div>

                    <div class="col-md-6">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('../partials/footer',{categorias: categorias, datas: datas, conexao: connection}); %>
    </div>
</div>
<!-- loader -->
<div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px">
        <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/>
        <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10"
                stroke="#F96D00"/>
    </svg>
</div>


<%- include('../partials/scripts'); %>
</body>
</html>